# Environment
ENVIRONMENT=development

# Project
PROJECT_NAME=StatCat
VERSION=0.1.0
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=sqlite:///./data/combine.db
DATABASE_FORCE_IPV4=false
DATABASE_HOSTADDR=
AUTO_SEED_DATABASE=false

# Security
SECRET_KEY=change-me
ENCRYPTION_KEY_CURRENT=
ENCRYPTION_KEY_PREVIOUS=
ACCESS_TOKEN_EXPIRE_MINUTES=1440
SECURITY_ALGORITHM=HS256
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_SALT=password-reset
REPORT_CARD_TEMPLATE_DIR=templates/report_cards
REPORT_CARD_TEMPLATE_FILE=page1.svg
REPORT_CARD_OUTPUT_DIR=media/report_cards

# CORS Origins (update for your frontend domains)
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:4173"]
# Comma-separated list for production origins (optional)
CORS_ORIGINS=
# Single frontend origin (optional; append to CORS)
FRONTEND_ORIGIN=

# Media Storage
MEDIA_ROOT=media

# AWS S3 (Optional)
AWS_S3_BUCKET=
AWS_REGION=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# SMTP Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=StatCat

# Observabilidade
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=
OTEL_TRACES_SAMPLER_RATIO=0.2
