# Separate multiple origins with commas
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:4173","https://stat-cat.vercel.app","https://stats-cat.vercel.app","https://statscat.vercel.app","https://stat-cat-git-*.vercel.app","https://stats-cat-git-*.vercel.app"]

# Media Storage
MEDIA_ROOT=media

# AWS S3 (Optional)
AWS_S3_BUCKET=
AWS_REGION=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# SMTP Email Configuration (Gmail)
