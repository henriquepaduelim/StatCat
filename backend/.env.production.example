# Environment
ENVIRONMENT=production

# Project
PROJECT_NAME=StatCat
VERSION=0.1.0

# Database (PostgreSQL recomendado em produção)
# Exemplo: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://<user>:<password>@<host>:5432/<db>
DATABASE_FORCE_IPV4=false
DATABASE_HOSTADDR=
AUTO_SEED_DATABASE=false

# Security
# Gere uma chave forte (32+ chars) e defina via variáveis secretas na plataforma.
SECRET_KEY=replace-with-strong-random-value
ACCESS_TOKEN_EXPIRE_MINUTES=1440
SECURITY_ALGORITHM=HS256

# CORS (adicione apenas os domínios do frontend)
BACKEND_CORS_ORIGINS=["https://app.seudominio.com"]

# Media Storage
MEDIA_ROOT=/app/media

# AWS S3 (opcional)
AWS_S3_BUCKET=
AWS_REGION=

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# SMTP Email Configuration (recomenda usar provedor transacional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=StatCat

# Web Push (opcional)
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_SUBJECT=mailto:suporte@seudominio.com
